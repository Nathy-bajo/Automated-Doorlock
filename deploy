set -o errexit
set -o nounset
set -o pipefail
set -o xtrace

readonly TARGET_HOST=pi@192.168.100.249
readonly TARGET_PATH=/home/pi/code
readonly TARGET_ARCH=armv7-unknown-linux-gnueabihf
readonly SOURCE_PATH=$(pwd)

rsync -aP ${SOURCE_PATH} ${TARGET_HOST}:${TARGET_PATH}

ssh -t ${TARGET_HOST} su -c "/home/pi/code"

cargo build --release --target=armv7-unknown-linux-gnueabihf

./target/${TARGET_ARCH}/release/servercode3
